.container-fluid.wrapper
    .row
        .col-12.composition
            .container
                .row
                    header.header
                        .col-md.logo.header__item
                            span.logo__image
                                img(src="../assets/image/logo.png")
                            span.logo__title Рыбалка в Хабаровском крае
                        .col-md.social.header__item
                            .social__item
                                a(href="#").social__link
                                    i.icon-vkontakte
                            .social__item
                                a(href="#").social__link
                                    i.icon-whatsapp
                        .col-md-4.header__item
                            form(action="#" method="POST").search
                                input(type="text" id="search-text" name="search-text" placeholder="Поиск по сайту").search__input
                                button(type="submit").search__btn
    .row
        .col-12.login-wrap
            .container
                .row
                    .col-md-4.offset-md-8.login
                        span.login__welcome Здравствуйте,
                        span.login__user &nbsp;Гость!
                        a(href="#").login__link Вход
                        a(href="#").login__link Регистрация
    .row
        .col-12.menu-wrap
            .container
                .row
                    .col-12
                        nav.menu
                            ul.menu__list
                                li.menu__item
                                    a(href="#").menu__link Главная
                                li.menu__item
                                    a(href="#").menu__link Рыболовные отчеты
                                li.menu__item
                                    a(href="#").menu__link Статьи
                                    ul.menu-dropdown__list
                                        li.menu-dropdown__item
                                            a(href="#").menu-dropdown__link Главная
                                        li.menu-dropdown__item
                                            a(href="#").menu-dropdown__link Рыболовные отчеты
                                        li.menu-dropdown__item
                                            a(href="#").menu-dropdown__link Статьи
                                li.menu__item
                                    a(href="#").menu__link Видео
                                li.menu__item
                                    a(href="#").menu__link Форум
                                li.menu__item
                                    a(href="#").menu__link Рыболовная карта
                                li.menu__item
                                    a(href="#").menu__link О портале

